@model ISIS.CreateCourseCommand

@{
    ViewBag.Title = "Create A New Course";
}

<div id="commandBar">
    @Html.ActionLink("Back to List", "Index")
</div>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create A New Course</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rubric)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Rubric)
            @Html.ValidationMessageFor(model => model.Rubric)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CourseNumber)
            @Html.ValidationMessageFor(model => model.CourseNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

