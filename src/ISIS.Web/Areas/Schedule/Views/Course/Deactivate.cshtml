@model ISIS.Schedule.DeactivateCourseCommand
@using Microsoft.Web.Mvc;
@using ISIS.Web.Areas.Schedule.Controllers;
@{
    ViewBag.Title = "Deactivate Course";
}

<div id="commandBar">
    @(Html.ActionLink<CourseController>(c => c.Details(Model.CourseId), "Back to Details"))
</div>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Activate Course</legend>

        @Html.HiddenFor(model => model.CourseId)

        <p>Do you really want to deactivate this course?</p>

        <p>
            <input type="submit" value="Deactivate" />
        </p>
    </fieldset>
}

