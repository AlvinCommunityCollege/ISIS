@model ISIS.Schedule.MakeCoursePendingCommand
@using Microsoft.Web.Mvc;
@using ISIS.Web.Areas.Schedule.Controllers;
@{
    ViewBag.Title = "Make Course Pending";
}

<div id="commandBar">
    @(Html.ActionLink<CourseController>(c => c.Details(Model.CourseId), "Back to Details"))
</div>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Make Course Pending</legend>

        @Html.HiddenFor(model => model.CourseId)

        <p>Do you really want to make this course pending?</p>

        <p>
            <input type="submit" value="Make It Pending" />
        </p>
    </fieldset>
}

